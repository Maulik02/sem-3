#include<iostream.h>
#include<conio.h>
class time
{
	private:
		int hh,mm,ss;
	public:
		time()
		{
			cout<<"\n\tEnter HH:";
			cin>>hh;
			cout<<"\n\tEnter MM:";
			cin>>mm;
			cout<<"\n\tEnter SS:";
			cin>>ss;
		}
		void puttime()
		{
			cout<<"\n\tTime="<<hh<<":"<<mm<<":"<<ss;
		}
};
